#!/usr/bin/env pwsh
# Git pre-commit hook that runs ./build.ps1 before allowing a commit

# Save the current working directory
$originalPath = Get-Location

try {
    # Change to the repository root directory
    Set-Location (git rev-parse --show-toplevel)

    Write-Host "üîç Running pre-commit hook: Verifying build..." -ForegroundColor Cyan

    # Run the build script
    & ./build.ps1

    # Check if build was successful
    if ($LASTEXITCODE -ne 0) {
        Write-Host "‚ùå Pre-commit hook failed: Build contains errors!" -ForegroundColor Red
        Write-Host "   Please fix the build errors before committing." -ForegroundColor Red
        exit 1
    }

    Write-Host "‚úÖ Pre-commit hook passed: Build successful!" -ForegroundColor Green
    exit 0
}
catch {
    Write-Host "‚ùå Pre-commit hook error: $_" -ForegroundColor Red
    exit 1
}
finally {
    # Restore the original working directory
    Set-Location $originalPath
}